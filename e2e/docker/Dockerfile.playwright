FROM mcr.microsoft.com/playwright:v1.56.0@sha256:35246d87a7c88ea9b771c65d33171b2611b02a8253b4b12ce6f94376c55f99f2

WORKDIR /app

# required by the e2e test code
RUN npm install "@playwright/test@^1.56.0" "dotenv@^16.3.1" "@grafana/plugin-e2e"

